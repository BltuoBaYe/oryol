//------------------------------------------------------------------------------
//  TBUIShaders.shd
//------------------------------------------------------------------------------

@vs vs
@uniform mat4 ortho Ortho
@in vec4 position
@in vec2 texcoord0
@in vec4 color0
@out vec2 uv
@out vec4 color
    _position = mul(position, ortho);
    uv = texcoord0;
    color = color0;
@end

@fs fs
@uniform sampler2D tex Texture
@in vec2 uv
@in vec4 color
    _color = tex2D(tex, uv) * color;
@end

@bundle TBUIShader
@program vs fs
@end
