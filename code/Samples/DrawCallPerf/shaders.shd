//------------------------------------------------------------------------------
//  DrawCallPerf sample shaders
//------------------------------------------------------------------------------

@vs vs
@uniform mat4 mvp ModelViewProjection
@uniform vec4 particleTranslate ParticleTranslate
@in vec4 position
@in vec4 color0
@out vec4 color
    $out_position = mvp * (position + particleTranslate);
    color = color0;
@end

@fs fs
@in vec4 color
    $out_color = color;
@end

@bundle Main
@program vs fs
@end
