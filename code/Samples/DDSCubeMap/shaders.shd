//------------------------------------------------------------------------------
//  DDSCubeMap sample shaders.
//------------------------------------------------------------------------------

@vs vs
@uniform mat4 mvp ModelViewProjection
@in vec4 position
@in vec3 normal
@out vec3 nrm
    $out_position = mvp * position;
    nrm = normal;
@end

@fs fs
@uniform samplerCube tex Texture
@in vec3 nrm
    $out_color = $textureCube(tex, nrm);
@end

@bundle Main
@program vs fs
@end