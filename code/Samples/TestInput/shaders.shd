//------------------------------------------------------------------------------
//  shaders.shd
//------------------------------------------------------------------------------

@vs vs
@uniform mat4 mvp ModelViewProjection
@in vec4 position
@in vec4 normal
@out vec4 nrm
    $out_position = mvp * position;
    nrm = normal;
@end

@fs fs
@in vec4 nrm
    $out_color = nrm * 0.5 + 0.5;
@end

@bundle Main
@program vs fs
@end
