//------------------------------------------------------------------------------
//  shaders.shd
//  Annotated GLSL shaders for Triangle sample.
//------------------------------------------------------------------------------

//------------------------------------------------------------------------------
@vs vs
@in vec4 position
@in vec4 color0
@out vec4 color 
    $out_position = position;
    color = color0;
@end 

//------------------------------------------------------------------------------
@fs fs
@in vec4 color
    $out_color = color;
@end

//------------------------------------------------------------------------------
@bundle Triangle
@program vs fs
@end