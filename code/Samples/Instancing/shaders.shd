//------------------------------------------------------------------------------
//  Instancing sample shaders
//------------------------------------------------------------------------------

@vs vs
@uniform_block vsParams VSParams
    @uniform mat4 mvp ModelViewProjection
@end
@in vec4 position
@in vec4 color0
@in vec4 instance0
@out vec4 color
    _position = mul((position + instance0), mvp); 
    color = color0;
@end

@fs fs
@in vec4 color
    _color = color;
@end

@bundle Main
@program vs fs
@end
