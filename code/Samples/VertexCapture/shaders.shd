//------------------------------------------------------------------------------
//  DrawCallPerf sample shaders
//------------------------------------------------------------------------------

@uniform_block params Params
mat4 mvp ModelViewProjection
@end

//------------------------------------------------------------------------------
@vs captureVS
@in vec4 position
@out vec3 pos => position
    _position = position;
    pos = position.xyz * 2.0;
@end

@fs captureFS
@in vec3 pos
    discard;
    _color = vec4(0.0);
@end

@program CaptureShader captureVS captureFS

//------------------------------------------------------------------------------
@vs drawVS
@use_uniform_block params
@in vec4 position
    _position = mul(mvp, position);
@end

@fs drawFS
    _color = vec4(1.0, 0.0, 0.0, 1.0);
@end

@program DrawShader drawVS drawFS
