//------------------------------------------------------------------------------
//  shaders.shd
//------------------------------------------------------------------------------

@vs vs
@uniform mat4 mvp ModelViewProjection
@in vec4 position
@in vec4 normal
@out vec4 nrm
    _position = mul(position, mvp);
    nrm = normal;
@end

@fs fs
@in vec4 nrm
    _color = nrm * 0.5 + 0.5;
@end

@bundle Main
@program vs fs
@end
