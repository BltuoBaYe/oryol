//------------------------------------------------------------------------------
//  shaders.shd
//  Annotated GLSL shaders for Shapes sample
//------------------------------------------------------------------------------

@vs vs
@uniform mat4 mvp ModelViewProjection
@in vec4 position
@in vec4 color0
@out vec4 color
    $out_position = mul(position, mvp);
    color = color0;
@end

@fs fs
@in vec4 color
    $out_color = color;
@end

@bundle Shapes
@program vs fs
@end
