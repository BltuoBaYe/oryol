//------------------------------------------------------------------------------
//  shaders.shd
//  Annotated GLSL shaders for Shapes sample
//------------------------------------------------------------------------------

@vs vs
@uniform_block params Params
    @uniform mat4 mvp ModelViewProjection
@end
@in vec4 position
@in vec4 color0
@out vec4 color
    _position = mul(position, mvp);
    color = color0;
@end

@fs fs
@in vec4 color
    _color = color;
@end

@bundle Shapes
@program vs fs
@end
